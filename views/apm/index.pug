extends ../public/layout

block title
    title APM

block content
    h1 Automated Printing Machines (APMs)
    hr
    table.table
        thead
            tr
            th(scope='col') No
            th(scope='col') APM ID
            th(scope='col') Name
            th(scope='col') Status
            
        tbody

            each apm, index in payload
                
                tr(onclick='changeWindow("' + apm.apmid + '")')
                    th(scope='row') #{index}
                    td #{apm.apmid}
                    td #{apm.printername}
                    td #{apm.status}

    
    script.
        function changeWindow(apmid) {
            window.location.href=`/apm/${apmid}`
        }

        

